{
    "manifest_version": 2,
    "name": "晋江论坛防刷屏",
    "version": "0.5.0",

    "description": "晋江论坛专用防刷屏浏览器扩展(×ω×)具体功能请看设置┏( ゜ω゜)=☞",
    "icons": {
        "16": "xq16.png",
        "19": "xq19.png",
        "48": "xq48.png",
        "128": "xq128.png"
    },

    "background":{
        "scripts":["background.js"],
        "persistent": false
    },

    "browser_action":{
        "default_icon": "xq16.png",
        "default_title": "启动防刷屏"
    },

    "options_page": "options.html",

    "options_ui": {
        "chrome_style": true,
        "page": "options.html"
    },

    "permissions":[
        "tabs", "storage", "notifications", "http://bbs.jjwxc.net/*", "http://bbs.jjwxc.com/*"
    ],

    "content_scripts": [{
        "matches": ["http://bbs.jjwxc.net/showmsg.php*", "http://bbs.jjwxc.com/showmsg.php*"],
        "run_at": "document_end",
        "js": ["inner.js"]
    }]
}